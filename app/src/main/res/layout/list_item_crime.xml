<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crime_list_item_solved_check"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="4dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/crime_list_item_crime_title"
            android:layout_toLeftOf="@id/crime_list_item_solved_check"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="Title"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/crime_list_item_crime_date"
            android:layout_toLeftOf="@+id/crime_list_item_solved_check"
            android:layout_below="@id/crime_list_item_crime_title"
            android:layout_alignParentLeft="true"
            android:text="Date"/>
</RelativeLayout>